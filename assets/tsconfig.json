{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2015"],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "ts-build",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "ts-build"
  ],
  "paths": {
    "react": ["./node_modules/@types/react/index"]
  }
}
